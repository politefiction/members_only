<h1>Log In</h1>

<%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %>:
    <%= f.email_field :email %><br />

    <%= f.label :password %>
    <%= f.password_field :password %><br />

    <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
    <% end %><br />

    <%= f.submit "Log in" %>
<% end %>