<h1>New Post</h1>

<% if @post.errors.any? %>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @post do |f| %>
    <%= f.label :title %>:<br />
    <%= f.text_field :title %><br />
    <br />
  
    <%= f.label :content %>:<br />
    <%= f.text_area :content, size: "50x10" %><br />
  
    <%= f.submit %>
<% end %>